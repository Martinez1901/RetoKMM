<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main.xml"
    app:startDestination="@id/comicFragment">

    <fragment
        android:id="@+id/comicFragment"
        android:name="com.example.retokmm.android.ui.comic.ComicFragment"
        android:label="fragment_comic"
        tools:layout="@layout/fragment_comic" >
        <action
            android:id="@+id/action_comicFragment_to_comicInfoFragment"
            app:destination="@id/comicInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.retokmm.android.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchCharacterFragment"
            app:destination="@id/searchCharacterFragment" />
        <action
            android:id="@+id/action_searchFragment_to_searchComicFragment"
            app:destination="@id/searchComicFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.retokmm.android.ui.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.example.retokmm.android.ui.character.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_characterInfoFragment"
            app:destination="@id/characterInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/comicInfoFragment"
        android:name="com.example.retokmm.android.ui.comic_info.ComicInfoFragment"
        android:label="fragment_comic_info"
        tools:layout="@layout/fragment_comic_info" >
        <argument
            android:name="comic"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/characterInfoFragment"
        android:name="com.example.retokmm.android.ui.character_info.CharacterInfoFragment"
        android:label="fragment_character_info"
        tools:layout="@layout/fragment_character_info" >
        <argument
            android:name="character"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchCharacterFragment"
        android:name="com.example.retokmm.android.ui.search.SearchCharacterFragment"
        android:label="SearchCharacterFragment" >
        <action
            android:id="@+id/action_searchCharacterFragment_to_characterInfoFragment"
            app:destination="@id/characterInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchComicFragment"
        android:name="com.example.retokmm.android.ui.search.SearchComicFragment"
        android:label="SearchComicFragment" >
        <action
            android:id="@+id/action_searchComicFragment_to_comicInfoFragment"
            app:destination="@id/comicInfoFragment" />
    </fragment>
</navigation>